killall -9 dhclient
killall -9 wpa_supplicant
killall -9 dbus-daemon
killall -9 udevd
mount -o remount,ro /kanapi_packages
mount -o remount,ro /kanapi_packages_x86_64
mount -o remount,ro /kanapi_packages_external
mount -o remount,ro /kanapi_packages_build
umount /dev/sdb2
umount /dev/sdb3
umount /dev/sdb4
sync
sync
sync

mount -o remount,ro /kanapi_packages
poweroff -f

