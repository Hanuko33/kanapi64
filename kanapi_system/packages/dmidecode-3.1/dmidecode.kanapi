PACKAGE_NAME=dmidecode
VER=3.1
URL="http://mirror.infotronik.hu/mirrors/pub/gnusavannah/dmidecode"
EXT=tar.xz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	local_copy
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true prefix=${PREFIX}
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true prefix=${PREFIX} && pkg_install_sbin_all
}

