PACKAGE_NAME=libssh2
VER=1.8.0
URL="https://www.libssh2.org/download"
EXT=tar.gz
#build depends on
. ../settings

export LDFLAGS="-L${KANAPI_BASE}/libgpg-error-${libgpg_error_ver}/lib -lgpg-error"

pkg_download() {
	pkg_curl
}

pkg_prepare() {
	pkg_tar_gz
}

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --with-libgcrypt=${KANAPI_BASE}/libgcrypt-${libgcrypt_ver} --without-openssl --without-libz 
}

