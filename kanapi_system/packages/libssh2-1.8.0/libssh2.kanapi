PACKAGE_NAME=libssh2
VER=1.8.0
URL="https://www.libssh2.org/download"
EXT=tar.gz
LIB_DEPENDS=zlib

. ../settings

export CFLAGS="${CFLAGS} `gpg-error-config --cflags`"
export LDFLAGS="${LDFLAGS} `gpg-error-config --libs`"

pkg_download() {
	pkg_curl
}

pkg_prepare() {
	pkg_tar_gz
}

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --with-libgcrypt=`libgcrypt-config --prefix` --without-openssl --with-libz-prefix=`pkg-config --variable=prefix zlib`
}

pkg_check() {
	gpg-error-config --cflags
	gpg-error-config --libs
	libgcrypt-config --cflags
	libgcrypt-config --libs
	libgcrypt-config --prefix
	pkg-config --variable=prefix zlib
	echo "CFLAGS=${CFLAGS}"
	echo "LDFLAGS=${LDFLAGS}"
	echo "LD_LIBRARY_PATH=${LD_LIBRARY_PATH}"
}

pkg_install() {
	pkg_install_pc
	pkg_install_libs
}
