PACKAGE_NAME=graphviz
VER=2.40.1
URL="http://www.graphviz.org/pub/graphviz/stable/SOURCES"
EXT=tar.gz
#build depends on

LIB_DEPENDS="expat xaw7 xrender x11 cairo tcl tk xmu xext ice xpm sm"

. ../settings

export LDFLAGS="${LDFLAGS} -lm -lrt -lpthread"
export CPP="${KANAPI_TARGET_NAME}-gcc -E ${CFLAGS}"
export CFLAGS="${CFLAGS} -I`${PKG_CONFIG} --variable=includedir cairo`"

pkg_prepare() {
	pkg_tar_gz
}

pkg_configure() {
	local_copy
	cat configure | sed "s/TCLSH_EXEC_PREFIX=/#TCLSH_EXEC_PREFIX=/" > configure.tmp
	mv configure.tmp configure
	chmod +x configure
	export TCLSH_EXEC_PREFIX=`${PKG_CONFIG} --variable=prefix tcl`
	./configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME}
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
	cd build
	pkg_install_pc_all
	pkg_install_bin_all
	pkg_install_libs
}

pkg_check() {
	${PKG_CONFIG} --libs ${LIB_DEPENDS}
}

