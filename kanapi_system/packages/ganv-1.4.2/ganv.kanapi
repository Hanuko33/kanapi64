PACKAGE_NAME=ganv
VER=1.4.2
URL="https://download.drobilla.net"
EXT=tar.bz2
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
export CXXFLAGS="${CFLAGS} -std=c++11"

pkg_configure() {
	local_copy
	./waf configure --prefix=${PREFIX}
}

pkg_build() {
	cd build
	./waf
}

pkg_install() {
	cd build
	./waf install && pkg_install_libs && pkg_install_pc_all_only
}

