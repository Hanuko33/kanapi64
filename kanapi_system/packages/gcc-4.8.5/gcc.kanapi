PACKAGE_NAME=gcc
VER=4.8.5
#URL="ftp://ftp.gnu.org/pub/gnu/gcc/gcc-4.8.5"
URL="http://ftp.gnu.org/pub/gnu/gcc/gcc-4.8.5"
EXT=tar.bz2
#build depends on
. ../settings

pkg_prepare() {
	pkg_tar_bz2
}

set_variables() {
	export LIBRARIES_PATH=${KANAPI_BASE}/gmp-${gmp_ver}/lib:${KANAPI_BASE}/mpfr-${mpfr_ver}/lib:${KANAPI_BASE}/mpc-${mpc_ver}/lib
	if [ -n "${LD_LIBRARY_PATH}" ] 
	then
		export LD_LIBRARY_PATH=${LIBRARIES_PATH}:${LD_LIBRARY_PATH}
	else
		export LD_LIBRARY_PATH=${LIBRARIES_PATH}
	fi
	export PATH=${KANAPI_BASE}/binutils-${binutils_ver}/bin:${PATH}
	export OBJDUMP_FOR_TARGET=${KANAPI_BASE}/binutils-${binutils_ver}/bin/objdump
	export AS_FOR_TARGET=${KANAPI_BASE}/binutils-${binutils_ver}/bin/as
	export AR_FOR_TARGET=${KANAPI_BASE}/binutils-${binutils_ver}/bin/ar
	export LD_FOR_TARGET=${KANAPI_BASE}/binutils-${binutils_ver}/bin/ld
	export NM_FOR_TARGET=${KANAPI_BASE}/binutils-${binutils_ver}/bin/nm
	export RANLIB_FOR_TARGET=${KANAPI_BASE}/binutils-${binutils_ver}/bin/ranlib
	export READELF_FOR_TARGET=${KANAPI_BASE}/binutils-${binutils_ver}/bin/readelf
	export STRIP_FOR_TARGET=${KANAPI_BASE}/binutils-${binutils_ver}/bin/strip
}

pkg_configure() {
	set_variables
	${PACKAGE_SRCDIR}/configure --disable-bootstrap --disable-multilib --target=${KANAPI_TARGET_NAME} --build=${KANAPI_TARGET_NAME} --host=${KANAPI_TARGET_NAME} \
	--disable-libada  --enable-languages="c c++" \
	--with-mpc=${KANAPI_BASE}/mpc-${mpc_ver} --with-mpfr=${KANAPI_BASE}/mpfr-${mpfr_ver} --with-gmp=${KANAPI_BASE}/gmp-${gmp_ver} \
	--prefix=${PREFIX} --disable-nls --disable-decimal-float \
	--disable-libmudflap --disable-libgomp --disable-libquadmath --disable-target-libiberty \
	--disable-target-zlib --without-ppl --disable-cloog --without-cloog --disable-libssp 
}

pkg_build() {
	set_variables
	export MAKE_JOBS=1
	make -j ${MAKE_JOBS} MAKEINFO=true 
	#all-gcc all-target-libgcc
}

pkg_install() {
	set_variables
	make -j ${MAKE_JOBS}  MAKEINFO=true 
	#install-gcc
	#make install-target-libgcc
	ln -s ${KANAPI_BASE}/binutils-${binutils_ver}/${KANAPI_TARGET_NAME}/bin/as ${KANAPI_BASE}/gcc-${gcc_ver}/libexec/gcc/${KANAPI_TARGET_NAME}/${gcc_ver}/as
	ln -s ${KANAPI_BASE}/binutils-${binutils_ver}/${KANAPI_TARGET_NAME}/bin/ld ${KANAPI_BASE}/gcc-${gcc_ver}/libexec/gcc/${KANAPI_TARGET_NAME}/${gcc_ver}/ld

}	
