PACKAGE_NAME=i3blocks
VER=c4e16fd
URL="git://github.com/vivien"
EXT=
#build depends on
. ../settings

pkg_download() {
	pkg_git_clone
}

pkg_prepare() {
	pkg_git_checkout
}

pkg_configure() {
	local_copy
}

pkg_build() {
	cd build
	make -j ${MAKE_JOBS} PREFIX=${PREFIX}
}

pkg_install() {
	cd build
	make -j ${MAKE_JOBS} install MAKEINFO=true PREFIX=${PREFIX}
	pkg_install_bin_all
}

