PACKAGE_NAME=libgcc
VER=4.8.5
URL=""
EXT=tar.bz2
#build depends on
. ../settings

pkg_download() {
	echo "already downloaded by gcc"
}

pkg_prepare() {
	echo "already prepared by gcc"
}

pkg_configure() {
	find ../gcc-${VER} -type d -exec "ln -s {} . \;
}

pkg_build() {
    make -j ${MAKE_JOBS} MAKEINFO=true all-target-libgcc
}

pkg_install() {
	make install-target-libgcc
}	

